---
interface Profile {
	network: string;
	username: string;
	url: string;
}

interface Location {
	city: string;
	countryCode: string;
	region: string;
}

interface Props {
	name: string;
	label: string;
	email?: string;
	phone?: string;
	url?: string;
	summary?: string;
	location?: Location;
	profiles?: Profile[];
	image?: string;
}

const { name, label, email, phone, url, summary, location, profiles, image } = Astro.props;

const networkIcons: Record<string, string> = {
	LinkedIn: `<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/>`,
	GitHub: `<path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/>`,
};
---

<header class="bg-zinc-950/20 text-white py-12 px-6">
	<div class="max-w-4xl mx-auto">
		<div class="flex flex-col md:flex-row md:items-center gap-6">
			{
				image && (
					<div class="relative">
						<img src={image} alt={name} class="w-32 h-32 border-4 border-zinc-700 object-cover ring-2 ring-primary/20" />
					</div>
				)
			}
			<div class="flex-1">
				<h1 class="text-4xl md:text-5xl font-bold tracking-tight">{name}</h1>
				<p class="text-xl md:text-2xl text-zinc-300 mt-2">{label}</p>

				<div class="flex flex-wrap gap-4 mt-4 text-sm text-zinc-300">
					{
						email && (
							<a href={`mailto:${email}`} class="hover:text-white transition-colors flex items-center gap-1.5">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<rect width="20" height="16" x="2" y="4" rx="2" />
									<path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
								</svg>
								{email}
							</a>
						)
					}
					{
						phone && (
							<a href={`tel:${phone}`} class="hover:text-white transition-colors flex items-center gap-1.5">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
								</svg>
								{phone}
							</a>
						)
					}
					{
						location && (
							<span class="flex items-center gap-1.5">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z" />
									<circle cx="12" cy="10" r="3" />
								</svg>
								{location.city}, {location.countryCode}
							</span>
						)
					}
					{
						url && (
							<a href={url} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors flex items-center gap-1.5">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<circle cx="12" cy="12" r="10" />
									<path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20" />
									<path d="M2 12h20" />
								</svg>
								Website
							</a>
						)
					}
				</div>

				{
					profiles && profiles.length > 0 && (
						<div class="flex gap-2 mt-4">
							{profiles.map((profile) => (
								<a href={profile.url} target="_blank" rel="noopener noreferrer" class="text-zinc-400 hover:text-white transition-colors p-2 hover:bg-zinc-800" title={profile.network}>
									<svg
										class="w-5 h-5"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
										set:html={networkIcons[profile.network] || ""}
									/>
								</a>
							))}
						</div>
					)
				}
			</div>
		</div>

		{summary && (
			<div class="mt-6 text-zinc-300 leading-relaxed max-w-3xl space-y-4">
				{summary.split('\n\n').map((paragraph) => (
					<p>{paragraph}</p>
				))}
			</div>
		)}
	</div>
</header>
