---
interface WorkItem {
  name: string;
  location?: string;
  description?: string;
  position: string;
  url?: string;
  startDate: string;
  endDate?: string;
  summary?: string;
  highlights?: string[];
}

interface Props {
  work: WorkItem[];
}

const { work } = Astro.props;

const formatDate = (dateStr: string) => {
  if (!dateStr) return '';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
};
---

<section class="py-8 px-6">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-2">
      <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      Work Experience
    </h2>

    <div class="space-y-8">
      {work.map((job, index) => (
        <div class="relative pl-8 border-l-2 border-slate-200">
          <div class="absolute -left-2 top-0 w-4 h-4 bg-slate-600 rounded-full border-2 border-white"></div>

          <div class="mb-2">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1">
              <h3 class="text-xl font-semibold text-slate-800">{job.position}</h3>
              <span class="text-sm text-slate-500 whitespace-nowrap">
                {formatDate(job.startDate)} — {job.endDate ? formatDate(job.endDate) : 'Present'}
              </span>
            </div>

            <div class="flex flex-wrap items-center gap-2 text-slate-600 mt-1">
              {job.url ? (
                <a href={job.url} target="_blank" rel="noopener noreferrer" class="font-medium hover:text-slate-800 transition-colors">
                  {job.name}
                </a>
              ) : (
                <span class="font-medium">{job.name}</span>
              )}
              {job.location && (
                <>
                  <span class="text-slate-400">•</span>
                  <span class="text-sm">{job.location}</span>
                </>
              )}
            </div>
          </div>

          {job.summary && (
            <p class="text-slate-600 mt-2 text-sm leading-relaxed">{job.summary}</p>
          )}

          {job.highlights && job.highlights.length > 0 && (
            <ul class="mt-3 space-y-2">
              {job.highlights.map((highlight) => (
                <li class="text-sm text-slate-600 flex items-start gap-2">
                  <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>{highlight}</span>
                </li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
