---
interface WorkItem {
  name: string;
  location?: string;
  description?: string;
  position: string;
  url?: string;
  startDate: string;
  endDate?: string;
  summary?: string;
  highlights?: string[];
}

interface Props {
  work: WorkItem[];
}

const { work } = Astro.props;

const formatDate = (dateStr: string) => {
  if (!dateStr) return '';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
};
---

<section class="py-10 px-6">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-semibold text-foreground mb-6 flex items-center gap-2">
      <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 12h.01"/>
        <path d="M16 6V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v2"/>
        <path d="M22 13a18.15 18.15 0 0 1-20 0"/>
        <rect width="20" height="14" x="2" y="6" rx="2"/>
      </svg>
      Work Experience
    </h2>

    <div class="space-y-6">
      {work.map((job) => (
        <div class="relative pl-6 border-l-2 border-border">
          <div class="absolute -left-[9px] top-1 w-4 h-4 bg-primary border-2 border-background"></div>

          <div class="border border-border bg-card p-5 shadow-sm">
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
              <div>
                <h3 class="text-lg font-semibold text-card-foreground">{job.position}</h3>
                <div class="flex flex-wrap items-center gap-2 text-muted-foreground mt-1">
                  {job.url ? (
                    <a href={job.url} target="_blank" rel="noopener noreferrer" class="font-medium text-primary hover:underline">
                      {job.name}
                    </a>
                  ) : (
                    <span class="font-medium">{job.name}</span>
                  )}
                  {job.location && (
                    <>
                      <span class="text-border">•</span>
                      <span class="text-sm">{job.location}</span>
                    </>
                  )}
                </div>
              </div>
              <span class="inline-flex items-center bg-secondary px-2.5 py-0.5 text-xs font-medium text-secondary-foreground whitespace-nowrap">
                {formatDate(job.startDate)} — {job.endDate ? formatDate(job.endDate) : 'Present'}
              </span>
            </div>

            {job.summary && (
              <p class="text-muted-foreground mt-3 text-sm leading-relaxed">{job.summary}</p>
            )}

            {job.highlights && job.highlights.length > 0 && (
              <ul class="mt-4 space-y-2">
                {job.highlights.map((highlight) => (
                  <li class="text-sm text-muted-foreground flex items-start gap-2">
                    <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="m9 18 6-6-6-6"/>
                    </svg>
                    <span>{highlight}</span>
                  </li>
                ))}
              </ul>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
