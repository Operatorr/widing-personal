---
interface Skill {
  name: string;
  level?: string;
  keywords?: string[];
}

interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;

const getLevelVariant = (level?: string) => {
  switch (level?.toLowerCase()) {
    case 'expert':
      return 'bg-primary text-primary-foreground';
    case 'advanced':
      return 'bg-blue-500/10 text-blue-600 border border-blue-500/20';
    case 'intermediate':
      return 'bg-amber-500/10 text-amber-600 border border-amber-500/20';
    default:
      return 'bg-secondary text-secondary-foreground';
  }
};
---

<section class="py-10 px-6 bg-muted/30">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-semibold text-foreground mb-6 flex items-center gap-2">
      <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 2v4"/>
        <path d="m6.343 7.757-2.828-2.829"/>
        <path d="M2 13h4"/>
        <path d="m6.343 18.243-2.828 2.829"/>
        <path d="M12 18v4"/>
        <path d="m17.657 18.243 2.828 2.829"/>
        <path d="M18 13h4"/>
        <path d="m17.657 7.757 2.828-2.829"/>
        <circle cx="12" cy="13" r="3"/>
      </svg>
      Skills
    </h2>

    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {skills.map((skill) => (
        <div class="border border-border bg-card p-4 shadow-sm">
          <div class="flex items-center justify-between mb-3">
            <h3 class="font-semibold text-card-foreground">{skill.name}</h3>
            {skill.level && (
              <span class={`text-xs px-2 py-0.5 font-medium ${getLevelVariant(skill.level)}`}>
                {skill.level}
              </span>
            )}
          </div>

          {skill.keywords && skill.keywords.length > 0 && (
            <div class="flex flex-wrap gap-1.5">
              {skill.keywords.map((keyword) => (
                <span class="text-xs bg-secondary text-secondary-foreground px-2 py-1">
                  {keyword}
                </span>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
