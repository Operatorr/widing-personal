---
interface EducationItem {
  institution: string;
  url?: string;
  area: string;
  studyType: string;
  startDate: string;
  endDate?: string;
  score?: string;
  courses?: string[];
}

interface Props {
  education: EducationItem[];
}

const { education } = Astro.props;

const formatYear = (dateStr?: string) => {
  if (!dateStr) return '';
  return dateStr.substring(0, 4);
};
---

<section class="py-10 px-6 bg-muted/30">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-semibold text-foreground mb-6 flex items-center gap-2">
      <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21.42 10.922a1 1 0 0 0-.019-1.838L12.83 5.18a2 2 0 0 0-1.66 0L2.6 9.08a1 1 0 0 0 0 1.832l8.57 3.908a2 2 0 0 0 1.66 0z"/>
        <path d="M22 10v6"/>
        <path d="M6 12.5V16a6 3 0 0 0 12 0v-3.5"/>
      </svg>
      Education
    </h2>

    <div class="grid gap-4 md:grid-cols-2">
      {education.map((edu) => (
        <div class="border border-border bg-card p-5 shadow-sm">
          <div class="flex justify-between items-start gap-2">
            <div>
              <h3 class="font-semibold text-card-foreground">{edu.studyType}</h3>
              <p class="text-muted-foreground">{edu.area}</p>
            </div>
            <span class="inline-flex items-center bg-secondary px-2 py-0.5 text-xs font-medium text-secondary-foreground whitespace-nowrap">
              {formatYear(edu.startDate)} â€” {formatYear(edu.endDate)}
            </span>
          </div>

          <div class="mt-3 pt-3 border-t border-border">
            {edu.url ? (
              <a href={edu.url} target="_blank" rel="noopener noreferrer" class="text-sm font-medium text-primary hover:underline">
                {edu.institution}
              </a>
            ) : (
              <span class="text-sm font-medium text-card-foreground">{edu.institution}</span>
            )}
          </div>

          {edu.score && (
            <p class="text-sm text-muted-foreground mt-2">Score: {edu.score}</p>
          )}

          {edu.courses && edu.courses.length > 0 && (
            <div class="mt-3 flex flex-wrap gap-1">
              {edu.courses.map((course) => (
                <span class="text-xs bg-secondary text-secondary-foreground px-2 py-0.5">
                  {course}
                </span>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
