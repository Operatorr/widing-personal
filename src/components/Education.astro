---
interface EducationItem {
  institution: string;
  url?: string;
  area: string;
  studyType: string;
  startDate: string;
  endDate?: string;
  score?: string;
  courses?: string[];
}

interface Props {
  education: EducationItem[];
}

const { education } = Astro.props;

const formatYear = (dateStr: string) => {
  if (!dateStr) return '';
  return dateStr.substring(0, 4);
};
---

<section class="py-8 px-6 bg-slate-50">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-2">
      <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path d="M12 14l9-5-9-5-9 5 9 5z" />
        <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
      </svg>
      Education
    </h2>

    <div class="grid gap-4 md:grid-cols-2">
      {education.map((edu) => (
        <div class="bg-white rounded-lg p-5 shadow-sm border border-slate-100">
          <div class="flex justify-between items-start gap-2">
            <div>
              <h3 class="font-semibold text-slate-800">{edu.studyType}</h3>
              <p class="text-slate-600">{edu.area}</p>
            </div>
            <span class="text-sm text-slate-500 whitespace-nowrap">
              {formatYear(edu.startDate)} â€” {formatYear(edu.endDate)}
            </span>
          </div>

          <div class="mt-3 pt-3 border-t border-slate-100">
            {edu.url ? (
              <a href={edu.url} target="_blank" rel="noopener noreferrer" class="text-sm font-medium text-slate-700 hover:text-slate-900 transition-colors">
                {edu.institution}
              </a>
            ) : (
              <span class="text-sm font-medium text-slate-700">{edu.institution}</span>
            )}
          </div>

          {edu.score && (
            <p class="text-sm text-slate-500 mt-1">Score: {edu.score}</p>
          )}

          {edu.courses && edu.courses.length > 0 && (
            <div class="mt-3 flex flex-wrap gap-1">
              {edu.courses.map((course) => (
                <span class="text-xs bg-slate-100 text-slate-600 px-2 py-0.5 rounded">
                  {course}
                </span>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
